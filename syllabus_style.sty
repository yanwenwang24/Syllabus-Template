\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{syllabus_style}[2025/11/22 Syllabus Style Package]

%----------------------------------------------------------------------------------------
%	PACKAGES AND THEMES
%----------------------------------------------------------------------------------------
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
\RequirePackage{geometry}
\RequirePackage{xcolor}
\RequirePackage{graphicx}
\RequirePackage{fancyhdr}
\RequirePackage{titlesec}
\RequirePackage{enumitem}
\RequirePackage{hyperref}
\RequirePackage{booktabs}
\RequirePackage{lipsum}
\RequirePackage{parskip}
\RequirePackage{twemojis} % Emojis
\RequirePackage{mathpazo} % Palatino font

%----------------------------------------------------------------------------------------
%	COLORS
%----------------------------------------------------------------------------------------
\definecolor{primaryColor}{RGB}{0, 51, 102} % Dark Blue
\definecolor{secondaryColor}{RGB}{204, 0, 0} % Dark Red
\definecolor{accentColor}{RGB}{230, 230, 230} % Light Gray

%----------------------------------------------------------------------------------------
%	PAGE LAYOUT
%----------------------------------------------------------------------------------------
\geometry{
	paper=a4paper,
	top=2.5cm,
	bottom=2.5cm,
	left=2.5cm,
	right=2.5cm,
	headheight=35pt,
	includehead,
	includefoot
}

%----------------------------------------------------------------------------------------
%	CUSTOM COMMANDS
%----------------------------------------------------------------------------------------
\newcommand{\thecoursename}{}
\newcommand{\thesemester}{}

\newcommand{\coursename}[1]{\renewcommand{\thecoursename}{#1}}
\newcommand{\semester}[1]{\renewcommand{\thesemester}{#1}}

% Import sections with line breaks
\newcommand{\sectionseparator}{%
    \par
    \vspace{0.2cm}
    \hrule
}

\newcommand{\importsection}[1]{%
    \input{#1}
    \sectionseparator
}

%----------------------------------------------------------------------------------------
%	HEADER AND FOOTER
%----------------------------------------------------------------------------------------
\pagestyle{fancy}
\fancyhf{}

% Header
\lhead{\includegraphics[height=0.85cm]{assets/logo.png}} 
\rhead{\textsc{\thesemester} \\ \textbf{\thecoursename}} 

% Footer
\cfoot{\thepage}

\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}

%----------------------------------------------------------------------------------------
%	TITLE FORMATTING
%----------------------------------------------------------------------------------------
\titleformat{\section}
{\color{primaryColor}\Large\bfseries}
{\thesection}{1em}{}[\titlerule]

\titleformat{\subsection}
{\color{primaryColor}\large\bfseries}
{\thesubsection}{1em}{}

\endinput
